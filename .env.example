# =============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================

# Entorno de ejecución (development, staging, production)
ENVIRONMENT=development

# Modo debug para desarrollo (True/False)
DEBUG=True

# Modo debug adicional para logs detallados (True/False)
DEBUG_MODE=False

# Modo testing para pruebas automatizadas (True/False)
TESTING_MODE=False

# Clave secreta para seguridad de la aplicación (cambiar en producción)
SECRET_KEY=your-super-secret-key-here-change-in-production

# Hosts permitidos para CORS (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Puerto donde se ejecuta la aplicación
APP_PORT=8000

# Dirección IP donde se sirve la aplicación
APP_HOST=0.0.0.0

# =============================================
# CONFIGURACIÓN DEL ASISTENTE VIRTUAL
# =============================================

# Nombre del asistente virtual
ASSISTANT_NAME="AsistenteIA"

# Idioma por defecto (es, en, fr, etc.)
DEFAULT_LANGUAGE="es"

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Zona horaria para el asistente
TIMEZONE="America/Argentina/Buenos_Aires"

# Máximo número de tokens en respuestas de IA
MAX_TOKENS=4000

# Máximo número de mensajes a recordar en el historial
MAX_HISTORY_MESSAGES=10

# Tiempo máximo de espera para solicitudes externas (segundos)
REQUEST_TIMEOUT=30

# =============================================
# BASE DE DATOS
# =============================================

# URL de conexión a la base de datos PostgreSQL principal
DATABASE_URL=postgresql://assistant:password123@postgres:5432/virtual_assistant

# URL de conexión para base de datos de testing
DATABASE_TEST_URL=postgresql://test_user:test_password@localhost:5432/virtual_assistant_test

# =============================================
# REDIS (Para Celery, Caché y Sesiones)
# =============================================

# URL de conexión a Redis para colas de tareas
REDIS_URL=redis://redis:6379/0

# URL de conexión a Redis para caché (base de datos diferente)
REDIS_CACHE_URL=redis://localhost:6379/1

# =============================================
# APIS EXTERNAS (Inteligencia Artificial)
# =============================================

# API Key para servicios de OpenAI (GPT, Whisper, etc.)
OPENAI_API_KEY=your-openai-api-key-here

# API Key para Google AI (Gemini, etc.)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ID de proyecto de Google Cloud
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id

# API Key para ElevenLabs (voz y texto a voz)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# API Key para HuggingFace (modelos de código abierto)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================
# AWS (Servicios de Amazon Web Services)
# =============================================

# Access Key ID para AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id

# Secret Access Key para AWS
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Región de AWS por defecto
AWS_REGION=us-east-1

# Nombre del bucket de S3 para almacenamiento
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================
# SERVICIOS EXTERNOS (Datos y APIs)
# =============================================

# API Key para servicios de clima/meteorología
WEATHER_API_KEY=your-weather-api-key

# API Key para servicios de noticias
NEWS_API_KEY=your-news-api-key

# API Key para servicios de geocodificación (direcciones → coordenadas)
GEOCODING_API_KEY=your-geocoding-api-key

# =============================================
# CONFIGURACIÓN DE AUDIO Y VOZ
# =============================================

# Tasa de muestreo para audio (Hz)
AUDIO_SAMPLE_RATE=16000

# Tamaño de chunk para procesamiento de audio
AUDIO_CHUNK_SIZE=1024

# Umbral de silencio para detección de voz
AUDIO_SILENCE_THRESHOLD=500

# Tiempo máximo de grabación (segundos)
AUDIO_RECORD_TIMEOUT=5

# Modelo de voz por defecto para texto a voz
DEFAULT_VOICE_MODEL=eleven_multilingual_v1

# Modelo por defecto para reconocimiento de voz (Speech-to-Text)
DEFAULT_STT_MODEL=whisper-1

# =============================================
# CONFIGURACIÓN DE MODELOS DE IA
# =============================================

# Modelo de IA por defecto para conversación
DEFAULT_AI_MODEL=gpt-4

# Modelo por defecto para embeddings (vectores de texto)
EMBEDDING_MODEL=text-embedding-ada-002

# Modelo por defecto para procesamiento de imágenes
VISION_MODEL=gpt-4-vision-preview

# =============================================
# CONFIGURACIÓN DE EMAIL
# =============================================

# Servidor SMTP para envío de correos
SMTP_HOST=smtp.gmail.com

# Puerto del servidor SMTP
SMTP_PORT=587

# Usuario para autenticación SMTP
SMTP_USER=your-email@gmail.com

# Contraseña o token de aplicación para SMTP
SMTP_PASSWORD=your-app-password

# Dirección de email que aparece como remitente
EMAIL_FROM=noreply@yourapp.com

# Habilitar/deshabilitar envío de emails (True/False)
EMAIL_ENABLED=False

# =============================================
# ALMACENAMIENTO Y ARCHIVOS
# =============================================

# Tamaño máximo de archivos (en bytes)
MAX_FILE_SIZE=5242880  # 5MB

# Directorio para archivos subidos
UPLOAD_FOLDER=./uploads

# Directorio para archivos estáticos
STATIC_FOLDER=./static

# =============================================
# MONITOREO Y TELEMETRÍA
# =============================================

# DSN de Sentry para monitoreo de errores
SENTRY_DSN=your-sentry-dsn-here

# Ruta del archivo de logs
LOG_FILE=logs/app.log

# Habilitar métricas de aplicación (True/False)
METRICS_ENABLED=True

# =============================================
# SEGURIDAD
# =============================================

# Orígenes permitidos para CORS (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Límite de peticiones por minuto
RATE_LIMIT_PER_MINUTE=60

# Header personalizado para API keys
API_KEY_HEADER=X-API-Key

# =============================================
# TAREAS PROGRAMADAS
# =============================================

# Intervalo de horas para limpieza automática
CLEANUP_INTERVAL_HOURS=24

# Habilitar backups automáticos (True/False)
BACKUP_ENABLED=True

# Horario para backups automáticos (formato cron)
BACKUP_SCHEDULE=0 9 * * *  # Todos los días a las 9 AM

# =============================================
# INTEGRACIONES EXTERNAS
# =============================================

# Webhook URL para integración con Slack
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Token del bot de Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Webhook URL para integración con Discord
DISCORD_WEBHOOK_URL=your-discord-webhook-url